<!-- Module Clients -->
	<action-mappings module="Clients">
		
		<action      path = "clientsDoEdit"
								 type = "ClientsDoEditAction"
								 name = "clientsDoEdit"
								scope = "request"
						 validate = "true">
				<forward name="success" path="/Main.php?do=clientsList" redirect="true" />
				<forward name="success-create" path="/Main.php?do=clientsUsersEdit" redirect="true" />
				<forward name="failure" path="/Main.php?do=clientsEdit" redirect="true" />
		</action>
		
		<action      path = "clientsUsersLogin"
								 type = "ClientsUsersLoginAction"
								 name = "clientsUsersLogin"
								scope = "request"
						 validate = "true">
			<forward name="success" path="ClientsUsersLogin.tpl"/>
			<forward name="success-unified" path="/Main.php?do=usersLogin" redirect="true" />
			<forward name="maintenance" path="Maintenance.tpl"/>
			<forward name="welcome" path="/Main.php?do=clientsUsersWelcome" redirect="true" />
		</action>
		
		<action      path = "clientsUsersDoLogin"
								 type = "ClientsUsersDoLoginAction"
								 name = "clientsUsersDoLogin"
								scope = "request"
						 validate = "true">
				<forward name="success" path="ClientsUsersWelcome.tpl"/>
				<forward name="failure-unified" path="UsersLogin.tpl"/>
				<forward name="failure" path="ClientsUsersLogin.tpl"/>
				<forward name="successFirstLogin" path="/Main.php?do=clientsUsersPasswordChange&amp;firstLogin=firstLogin" redirect="true" />
		</action>

		<action      path = "clientsUsersDoLogout"
								 type = "ClientsUsersDoLogoutAction"
								 name = "clientsUsersDoLogout"
								scope = "request"
						 validate = "true">
				<forward name="success-unified" path="/Main.php?do=usersLogin" redirect="true" />
				<forward name="success" path="/Main.php?do=clientsUsersLogin" redirect="true" />
		</action>
		
		<action      path = "clientsUsersDoEdit"
								 type = "ClientsUsersDoEditAction"
								 name = "clientsUsersDoEdit"
								scope = "request"
						 validate = "true">
				<forward name="success" path="/Main.php?do=clientsUsersList" redirect="true" />
				<forward name="success-owner" path="/Main.php?do=clientsList" redirect="true" />
				<forward name="failure" path="ClientsUsersEdit.tpl" />
		</action>

		<action      path = "clientsDoSetOwner"
								 type = "ClientsDoSetOwnerAction"
								 name = "clientsDoSetOwnerEdit"
								scope = "request"
						 validate = "true">
				<forward name="success" path="/Main.php?do=clientsUsersList" redirect="true" />
		</action>

		<action    path = "clientsUsersDoAddToGroup"
							 type = "ClientsUsersDoAddToGroupAction"
							 name = "clientsUsersDoAddToGroup"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersEdit" redirect="true" />
			<forward name="failure" path="/Main.php?do=clientsUsersEdit&amp;message=notAddedToGroup" redirect="true" />
		</action>

		<action    path = "clientsUsersDoActivate"
							 type = "ClientsUsersDoActivateAction"
							 name = "clientsUsersDoActivate"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersList&amp;message=activated" redirect="true" />
			<forward name="failure" path="/Main.php?do=clientsUsersList&amp;message=notactivated" redirect="true" />
		</action>

		<action    path = "clientsUsersDoRemoveFromGroup"
							 type = "ClientsUsersDoRemoveFromGroupAction"
							 name = "clientsUsersDoRemoveFromGroup"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersEdit" redirect="true" />
			<forward name="failure" path="/Main.php?do=clientsUsersEdit&amp;message=notRemovedFromGroup" redirect="true" />
		</action>

		<action    path = "clientsUsersDoPasswordRecovery"
							 type = "ClientsUsersDoPasswordRecoveryAction"
							 name = "clientsUsersDoPasswordRecovery"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersLogin&amp;message=passwordSent" redirect="true" />
			<forward name="failure" path="ClientsUsersPasswordRecovery.tpl"/>
		</action>
		
		<action    path = "clientsUsersPasswordDoChange"
							 type = "ClientsUsersPasswordDoChangeAction"
							 name = "clientsUsersPasswordDoChange"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersPasswordChange&amp;message=changed" redirect="true"/>
			<forward name="changePassword" path="/Main.php?do=clientsUsersPasswordChange" redirect="true"/>
			<forward name="failure" path="/Main.php?do=clientsUsersPasswordChange&amp;message=message" redirect="true"/>
		</action>
		
		<action    path = "clientsUsersPasswordRecoveryDoRequest"
							 type = "ClientsUsersPasswordRecoveryDoRequestAction"
							 name = "clientsUsersPasswordRecoveryDoRequest"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersLogin&amp;message=confirmationMailSent" redirect="true" />
			<forward name="failure" path="ClientsUsersPasswordRecovery.tpl"/>
		</action>
		
		<action    path = "clientsUsersPasswordRecoveryConfirmation"
							 type = "ClientsUsersPasswordRecoveryConfirmationAction"
							 name = "clientsUsersPasswordRecoveryConfirmation"
							scope = "request"
					 validate = "true">
			<forward name="askNewPass" path="ClientsUsersNewPasswordForRecovery.tpl"/>
			<forward name="sendNewPass" path="/Main.php?do=clientsUsersPasswordDoRecover" redirect="true"/>
		</action>
		
		<action    path = "clientsUsersPasswordDoChangeForRecovery"
							 type = "ClientsUsersPasswordDoChangeForRecoveryAction"
							 name = "clientsUsersPasswordDoChangeForRecovery"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersLogin&amp;message=passwordChanged" redirect="true"/>
			<forward name="failure" path="/Main.php?do=clientsUsersLogin" redirect="true"/>
		</action>

		<action    path = "clientsUsersPasswordDoRecover"
							 type = "ClientsUsersPasswordDoRecoverAction"
							 name = "clientsUsersPasswordDoRecover"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersLogin&amp;message=passwordSent" redirect="true" />
			<forward name="failure" path="ClientsUsersLogin.tpl"/>
		</action>

<!-- Module ClientsUsers - Section Levels -->

<!-- End Section - Levels -->

<!-- Module ClientsUsers - Section Groups -->

		<action    path = "clientsUsersGroupsDoAddCategory"
							 type = "ClientsUsersGroupsDoAddCategoryAction"
							 name = "clientsUsersGroupsDoAddCategory"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersGroupsEdit" redirect="true" />
			<forward name="failure" path="/Main.php?do=clientsUsersGroupsEdit&amp;message=notAddedToGroup" redirect="true" />
		</action>

		<action    path = "clientsUsersGroupsDoRemCategory"
							 type = "ClientsUsersGroupsDoRemCategoryAction"
							 name = "clientsUsersGroupsDoRemCategory"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=clientsUsersGroupsEdit" redirect="true" />
			<forward name="failure" path="/Main.php?do=clientsUsersGroupsEdit&amp;message=notRemovedFromGroup" redirect="true" />
		</action>

		<action    path = "clientsUsersValidationUsernameX"
							 type = "ClientsUsersValidationUsernameXAction"
							 name = "clientsUsersValidationUsernameX"
							scope = "request"
					 validate = "true">
			<forward name="success"  path="ClientsUsersValidationUsername.tpl" />
		</action>

	</action-mappings>
<!-- End Section - Groups -->

<!-- End Module Clients -->
