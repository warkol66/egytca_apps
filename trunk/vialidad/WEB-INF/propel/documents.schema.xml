		<column name="id" type="INTEGER" description="Id palabra clave" primaryKey="true" autoIncrement="true"  />
		<column name="keyWord" type="VARCHAR" size="255" description="Palabra clave"/>

		<vendor type="mysql">
			<parameter name="Charset" value="utf8"/>
			<parameter name="Collate" value="utf8_general_ci"/>
		</vendor>

	</table>-->

</database>