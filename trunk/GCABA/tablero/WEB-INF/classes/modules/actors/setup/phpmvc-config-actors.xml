<!-- Module Actors -->

	<action-mappings>
		<action    path = "actorsEdit"
							 type = "ActorsEditAction"
							 name = "actorsEdit"
							scope = "request"
					 validate = "true">
			<forward name="success" path="ActorsEdit.tpl" />
		</action>

		<action    path = "actorsDoEdit"
							 type = "ActorsDoEditAction"
							 name = "actorsDoEdit"
							scope = "request"
